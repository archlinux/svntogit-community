  cd ${srcdir}/${pkgbase}-${pkgver}/main
  make XDG_UTILS='' DESTDIR="${pkgdir}" uninstall
  rm -r ${pkgdir}/usr/lib/gambas3/gb.xml.{[c-l]*,xslt*,so*}
