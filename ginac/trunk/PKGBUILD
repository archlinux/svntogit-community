pkgname=ginac
pkgver=1.6.2
pkgrel=1
pkgdesc='Library designed to allow the creation of integrated systems that embed symbolic manipulations'
arch=('i686' 'x86_64')
url='http://www.ginac.de'
license=('GPL')
depends=('cln')
makedepends=('transfig' 'doxygen' 'texlive-bin')
options=('!libtool')
source=("http://www.ginac.de/ginac-${pkgver}.tar.bz2")
md5sums=('4cfdd286ab0c32981ec1c9c779e87eb9')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr

  make
}

check() {
  cd ${pkgname}-${pkgver}

  make check
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR="${pkgdir}" install
}
