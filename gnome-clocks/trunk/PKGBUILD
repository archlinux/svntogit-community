pkgname=gnome-clocks
pkgver=0.1.4
pkgrel=3
pkgdesc="Clock application designed for GNOME"
arch=('any')
url="https://live.gnome.org/GnomeClocks"
license=('GPL')
depends=('python2-gobject' 'clutter-gtk' 'libgweather' 'libnotify' 'python2-xdg' 'xdg-utils')
makedepends=('python2-distutils-extra')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz)
sha256sums=('0cb0ee16b268d1600dc40cb24ade1335a06d106401bc0dcc4a2f4fb8dee30cf9')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1
}
