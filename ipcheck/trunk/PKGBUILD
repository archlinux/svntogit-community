pkgname=ipcheck
pkgver=20110821
pkgrel=1
pkgdesc="A simple python script to register your dynamic IP address using the NIC V2.0 protocol"
arch=(any)
url="http://ipcheck.sourceforge.net/"
license=('GPL')
depends=('python')
backup=('etc/ipcheck.conf')
source=(http://downloads.sourceforge.net/project/ipcheck/ipcheck.py
	http://downloads.sourceforge.net/project/ipcheck/ipcheck.conf)
md5sums=('749114e81e995a7170ca6c629399aef8'
         '39532a3db7dc018f335219c51a541b96')

build()
{
  install -Dm755 $srcdir/ipcheck.py $pkgdir/usr/bin/ipcheck
  install -Dm755 $srcdir/ipcheck.conf $pkgdir/etc/ipcheck.conf
}
