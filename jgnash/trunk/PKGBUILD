# $Id$
# Maintainer: Aaron Schaefer <aaron@elasticdog.com>

pkgname=jgnash
pkgver=1.12.0
pkgrel=1
pkgdesc='A double-entry based personal finance manager, written in Java'
arch=('any')
url='http://jgnash.sourceforge.net/'
license=('GPL')
depends=('java-runtime')
install=jgnash.install
source=("http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.jar"
        'jgnash.desktop' 'jgnash.png' 'jgnash.sh')
md5sums=('a1cecfe91fc383e8d9eaa50a79495c68' 'a97a4b1d731293c8e6b26d279aa90185'
         'efc074fe9f2131ee354c09b23d1e334f' 'c32d2edf1384a182d207d7202c2d3bfc')

build() {
  cd $srcdir

  install -D -m644 $pkgname-$pkgver.jar $pkgdir/usr/share/java/$pkgname/$pkgname-$pkgver.jar
  install -D -m644 jgnash.desktop $pkgdir/usr/share/applications/jgnash.desktop
  install -D -m644 jgnash.png $pkgdir/usr/share/pixmaps/jgnash.png
  install -D -m755 jgnash.sh $pkgdir/usr/bin/jgnash
}
