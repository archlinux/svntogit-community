pkgname=lib32-curl
pkgver=7.19.6
pkgrel=1
pkgdesc="An URL retrival utility and library"
arch=('x86_64')
url="http://curl.haxx.se"
depends=('lib32-openssl' 'lib32-zlib')
license=('MIT')
groups=lib32
source=(http://mir.archlinux.fr/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)

build() {
  mkdir -p $pkgdir/opt/lib32/usr/lib
  cp -rPf $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('b64cf8bd6b1c63b964261d2f56360e21')
