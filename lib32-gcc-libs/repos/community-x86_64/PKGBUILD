# Contributor: Mikko Seppälä <t-r-a-y@mbnet.fi>
# Provides lib32-gcc to not break too much stuff
_pkgsourcename=gcc-libs
pkgname=lib32-$_pkgsourcename
pkgver=4.5.0
pkgrel=3
pkgdesc="The GNU Compiler Collection"
arch=('x86_64')
url="http://gcc.gnu.org"
license=('GPL' 'LGPL')
groups=('lib32')
depends=('lib32-glibc')
replaces=('lib32-gcc')
provides=('lib32-gcc')
source=(http://mir.archlinux.fr/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
#	cp -dp usr/lib/*.a* $pkgdir/opt/lib32/usr/lib
}
md5sums=('35be24e936284909b7fa5e6ebb3a7084')
sha256sums=('b01f2f33f9c30896bac1a80e56e6309603ff776560574f29cbb8753ff5b9ff35')
