pkgname=lib32-libtool
pkgver=2.2.10
pkgrel=1
pkgdesc="A generic library support script"
arch=('x86_64')
url="http://www.gnu.org/software/libtool"
license=('GPL')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.archlinux.org/core/os/i686/libtool-${pkgver}-${pkgrel}-i686.pkg.tar.xz)
md5sums=('f4117b08129e937b6a0cf3919f3583ec')

build() {
  install -dm755 ${pkgdir}/opt/lib32/usr/ || return 1
  cp -Rpf ${srcdir}/usr/lib ${pkgdir}/opt/lib32/usr/ || return 1
}

