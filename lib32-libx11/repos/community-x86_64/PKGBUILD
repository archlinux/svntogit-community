_pkgsourcename=libx11
pkgname=lib32-$_pkgsourcename
pkgver=1.3.2
pkgrel=1
pkgdesc="X11 client-side library"
arch=('x86_64')
url="http://xorg.freedesktop.org/"
license=('custom:XFREE86')
groups=('lib32')
depends=('lib32-libxau' 'lib32-libxdmcp' 'lib32-libxcb' 'lib32-libxcomposite')
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
md5sums=('ad39e47444daeff6e51a56511d13d29e')
