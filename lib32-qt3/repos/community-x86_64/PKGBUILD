_pkgsourcename=qt3
pkgname=lib32-$_pkgsourcename
pkgver=3.3.8
pkgrel=12
pkgdesc="The QT gui toolkit."
arch=(x86_64)
url="http://www.trolltech.com/products/qt/index.html"
license=('GPL')
groups=('lib32')
depends=('lib32-libxmu' 'lib32-libxcursor' 'lib32-libxinerama' 'lib32-mesa' 'lib32-libxft' 'lib32-libxrandr')
install=$pkgname.install
source=(http://mir.archlinux.fr/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/opt/qt/lib
	cp -dp opt/qt/lib/*.so* $pkgdir/opt/lib32/opt/qt/lib
}
md5sums=('ed5f413e6e4b5dba36a53413fff1e338')
