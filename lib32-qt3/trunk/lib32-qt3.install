post_install() {
 if ! [ `grep '/opt/lib32/opt/qt/lib' etc/ld.so.conf` ]; then
    echo "/opt/lib32/opt/qt/lib" >>etc/ld.so.conf
    sbin/ldconfig -r .
 fi
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  cat etc/ld.so.conf | grep -v '/opt/lib32/opt/qt/lib' >/tmp/.paclib32
  mv /tmp/.paclib32 etc/ld.so.conf
  chmod 644 etc/ld.so.conf
  sbin/ldconfig -r .
}

op=$1
shift

$op $*
