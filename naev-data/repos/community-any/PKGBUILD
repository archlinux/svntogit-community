pkgname=naev-data
pkgver=0.6.0
pkgrel=1
pkgdesc='2D action/rpg space game (data files)'
arch=('any')
url="http://sourceforge.net/projects/naev/"
license=('GPL3')
source=("http://downloads.sourceforge.net/sourceforge/naev/ndata-${pkgver}.zip")
md5sums=('b4b4d92af0dc1fb5d6dc32407427e82e')

build() {
	cd "$srcdir"  
}

package() {
  mkdir -p "$pkgdir/usr/share/naev/"
  install -m644 "$srcdir/ndata-${pkgver}.zip" "$pkgdir/usr/share/naev/ndata"
}
