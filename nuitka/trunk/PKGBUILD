pkgname=nuitka
pkgver=0.5.5.2
pkgrel=1
pkgdesc='Python to native compiler'
arch=('any')
url='http://www.nuitka.net/'
license=('APACHE')
makedepends=('scons')
depends=('python')
options=('!emptydirs')
source=("http://nuitka.net/releases/Nuitka-$pkgver.tar.gz")
sha256sums=('2f213150599cd6c54487d4fcc3ebb8139cc93bc12285c868d02c6316b4709b26')

package() {
  cd "Nuitka-$pkgver"

  python setup.py install --root="$pkgdir" --optimize=1
}

