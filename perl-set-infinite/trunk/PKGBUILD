pkgname=perl-set-infinite
pkgver=0.65
pkgrel=2
pkgdesc="Infinite Set Theory module, with Date, Time"
arch=('any')
url="http://search.cpan.org/dist/Set-Infinite"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/F/FG/FGLOCK/Set-Infinite-$pkgver.tar.gz)
md5sums=('d7577c5ed8fceb2ebd1247a4c4a3e825')

build() {
  cd  $srcdir/Set-Infinite-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd  $srcdir/Set-Infinite-$pkgver
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
