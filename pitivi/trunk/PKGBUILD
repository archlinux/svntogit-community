pkgname=pitivi
pkgver=0.13.2
pkgrel=1
pkgdesc="Editor for audio/video projects using the GStreamer framework"
arch=('any')
license=('LGPL')
depends=('gstreamer0.10>=0.10.24' 'pygoocanvas' 'gstreamer0.10-good' 'pygtk>=2.14.0' 'gstreamer0.10-python>=0.10.16' 'gnonlin>=0.10.12' 'setuptools' 'zope-interface' 'dbus-python' 'gnome-icon-theme')
makedepends=('pkgconfig')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/0.13/$pkgname-$pkgver.tar.gz)
url="http://www.pitivi.org/"

build() {
   cd "$srcdir/$pkgname-$pkgver"
   ./configure --prefix=/usr
   make || return 1
   make DESTDIR="$pkgdir" install || return 1
}
