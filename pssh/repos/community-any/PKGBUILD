pkgname=pssh
pkgver=2.2.2
pkgrel=1
pkgdesc="Parallel versions of the openssh tools ssh, scp, rsync, nuke, slurp"
arch=('any')
url="http://code.google.com/p/parallel-ssh/"
license=('BSD')
depends=('python')
makedepends=('setuptools')
changelog=$pkgname.changelog
source=(http://parallel-ssh.googlecode.com/files/$pkgname-$pkgver.tar.gz)
sha256sums=('9b2e7fa6ee1185d668ddb0e049a9f6f8a7bc07738c341c43be674fea6109a97a')

build() {
    cd ${srcdir}/$pkgname-$pkgver

    python setup.py install --root ${pkgdir}
}
