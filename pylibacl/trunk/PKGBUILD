# Maintainer: Lukas Fleischer <lfleischer@archlinux.org>

pkgname=pylibacl
pkgver=0.5.3
pkgrel=2
pkgdesc='A python extension module that allows you to manipulate the POSIX.1e ACLs.'
arch=('i686' 'x86_64')
url='http://pylibacl.k1024.org/'
license=('GPL')
depends=('python2')
makedepends=('python2-distribute')
source=("http://${pkgname}.k1024.org/downloads/${pkgname}-${pkgver}.tar.gz"{,.asc})
md5sums=('5d161e22ba5d94618d50ccffbfeb6050'
         'SKIP')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root="${pkgdir}"
}
