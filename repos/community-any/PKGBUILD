pkgname=devede
pkgver=3.17.0
pkgrel=2
pkgdesc="A program to create VideoDVDs and CDs"
arch=('any')
url="http://www.rastersoft.com/programas/devede.html"
license=('GPL3')
depends=('mplayer' 'mencoder' 'dvdauthor' 'vcdimager' 'cdrkit' 'pygtk' 'ttf-dejavu')
source=(http://www.rastersoft.com/descargas/${pkgname}-${pkgver}.tar.bz2)
md5sums=('c9aab0d75c224127ef4b0606de85c56c')

build() {
    cd ${srcdir}/${pkgname}
    # python2 fix
    for file in *.py; do
        sed -i 's_#!/usr/bin/env python_#!/usr/bin/env python2_' $file
    done
}

package() {
    cd ${srcdir}/${pkgname}
    ./install.sh --DESTDIR=${pkgdir} \
        --prefix=/usr \
        --unistall=no \
        --targeted=yes
    install -D -m644 ${pkgname}.desktop \
        ${pkgdir}/usr/share/applications/${pkgname}.desktop
}
