pkgver=5
pkgrel=1
arch=(any)
pkgdesc='more rockndiamonds levels'
url="https://www.artsoft.org/rocksndiamonds/"
license=('GPL')
depends=()
makedepends=('unzip' 'p7zip')
options=('!strip')
source=(https://www.artsoft.org/RELEASES/rocksndiamonds/levels/BD2K3-1.0.0.zip
	https://www.artsoft.org/RELEASES/rocksndiamonds/levels/Boulder_Dash_Dream-1.0.0.zip
