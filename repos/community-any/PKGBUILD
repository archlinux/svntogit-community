_pkgname=empy
pkgname=python-empy
pkgver=3.3.4
pkgrel=9
pkgdesc="Powerful and robust templating system for Python"
arch=('any')
url="http://www.alcyone.com/software/empy/"
license=('LGPL')
depends=('python')
# source=("http://www.alcyone.com/software/empy/$_pkgname-$pkgver.tar.gz")
source=("https://sources.archlinux.org/other/python-empy/empy-${pkgver}.tar.gz")
sha256sums=('9126211471fc7ff83fdd40beca93eb6de5681758fbe68b4cf8af6326259df1b1')

build() {
  cd $_pkgname-$pkgver
  python3 setup.py build
}

package() {
  cd $_pkgname-$pkgver 
  python3 setup.py install --root="$pkgdir" --optimize=1
}
