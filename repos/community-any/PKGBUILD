# $Id$
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=roundcubemail
pkgver=0.3.1
pkgrel=2
pkgdesc="A PHP web-based mail client"
arch=('any')
url="http://www.roundcube.net"
license=('GPL')
depends=('php')
optdepends=('php-fileinfo')
backup=('srv/http/roundcube/.htaccess' 'srv/http/roundcube/skins/default/images/roundcube_logo.png')
options=(force)
install=roundcubemail.install
source=(http://downloads.sourceforge.net/sourceforge/roundcubemail/roundcubemail-${pkgver}.tar.gz)
md5sums=('34e8e18772e7eada8769b6c5c20f7c8e')

build() {
  _instdir=${pkgdir}/srv/http/roundcube
  mkdir -p ${_instdir}
  cd ${_instdir}
  cp -ra ${srcdir}/roundcubemail-${pkgver}/* .  || return 1
  echo "deny from all" > .htaccess
  mv ${pkgdir}/srv/http/roundcube/installer ${pkgdir}/srv/http/roundcube/xinstallerx
}
