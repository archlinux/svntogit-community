pkgname=toxcore
pkgver=3513
_commit=6120b0e0bb865ab196cdf717a4829a3f83ef1e7b
pkgrel=1
pkgdesc='Secure, configuration-free, P2P Skype replacement backend'
arch=('i686' 'x86_64')
url='https://tox.chat'
license=('GPL3')
depends=('libconfig>=1.4'
         'libsodium>=1.0'
         'libvpx'
         'opus')
makedepends=('git' 'check')
conflicts=("tox")
provides=("tox")
source=("git+https://github.com/irungentoo/toxcore.git#commit=$_commit")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname
  git rev-list --count HEAD
}

build() {
  cd $pkgname
  autoreconf -if
  ./configure \
    --prefix=/usr \
    --enable-daemon \
    --disable-ntox \
    --disable-tests
  make
}

check() {
  cd $pkgname
  make check
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
  install -Dm644 ./other/bootstrap_daemon/tox-bootstrapd.service "$pkgdir/usr/lib/systemd/system/tox-bootstrapd.service"
}
