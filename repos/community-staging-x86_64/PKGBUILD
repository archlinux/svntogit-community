         'gambas3-gb-image-imlib' 'gambas3-gb-image-io' 'gambas3-gb-image' 'gambas3-gb-inotify' 'gambas3-gb-libxml' 'gambas3-gb-logging' 'gambas3-gb-map' 'gambas3-gb-markdown'
