pkgrel=4
pkgdesc="Keep imports out of your namespace"
arch=('any')
license=('PerlArtistic' 'GPL')
url='https://metacpan.org/release/namespace-autoclean'
depends=('perl-b-hooks-endofscope' 'perl-sub-identify' 'perl-namespace-clean')
