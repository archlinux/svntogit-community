pkgname=qbittorrent
pkgver=2.2.8
pkgrel=1
pkgdesc="A bittorrent client written in C++ / Qt4 using the good libtorrent library"
arch=('i686' 'x86_64')
url="http://www.qbittorrent.org/"
license=('GPL')
depends=('qt' 'libtorrent-rasterbar>=0.15.0' 'xdg-utils' 'boost>=1.41.0')
optdepends=('python: needed for search'
	    'geoip: inproves peer contry resolution')
install=qbittorrent.install
source=(http://downloads.sourceforge.net/sourceforge/qbittorrent/${pkgname}-${pkgver}.tar.gz)
md5sums=('4df0fb0cc016cb2e3c9cb6798c575ff5')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make INSTALL_ROOT=${pkgdir} install || return 1
}
