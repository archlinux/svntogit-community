_updatemod() {
  echo "  > Updating module dependencies..."
  EXTRAMODULES='extramodules-3.7-ARCH'
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}

post_install() {
  post_upgrade
}

post_upgrade() {
  getent group cdemu &>/dev/null || groupadd -r cdemu
  _updatemod
}

post_remove() {
  _updatemod
  groupdel cdemu
}

