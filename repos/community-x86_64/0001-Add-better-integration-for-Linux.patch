@@ -178,3 +178,28 @
 
 # File Dialog
 include(fileDialog/fileDialog.pri)
+
+unix:!macx {
+  isEmpty(PREFIX) {
+    PREFIX = /usr/local
+  }
+  isEmpty(BINDIR) {
+    BINDIR = $$PREFIX/bin
+  }
+  isEmpty(DATADIR) {
+    DATADIR = $$PREFIX/share
+  }
+
+  target.path = $$BINDIR
+
+  icon.files = applications/vokoscreenNG.png
+  icon.path = $$DATADIR/icons/hicolor/256x256/apps/
+
