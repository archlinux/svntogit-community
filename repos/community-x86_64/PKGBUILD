pkgname=fcitx5-kkc
pkgver=5.0.12
pkgrel=1
pkgdesc="KKC Wrapper for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-kkc"
license=('GPL')
depends=('fcitx5-qt' 'libkkc' 'libkkc-data')
makedepends=('extra-cmake-modules')
source=("https://download.fcitx-im.org/fcitx5/$pkgname/$pkgname-$pkgver.tar.xz"{,.sig})
sha512sums=('db7468134c12933bec50b112b2a5f013e7dec91b9644509a3006343e73db54c96ee6ee1175515d286ef6014f7b4cbde7819ba9b136ac20052557fc9121bfbb74'
            'SKIP')
validpgpkeys=('2CC8A0609AD2A479C65B6D5C8E8B898CBF2412F9') # Weng Xuetian <wengxt@gmail.com>

build(){
  cd $pkgname-$pkgver

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
