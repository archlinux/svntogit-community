pkgname=qtractor
pkgver=0.4.4
pkgrel=1
pkgdesc="Audio/MIDI multitrack sequencer"
arch=(i686 x86_64)
url="http://qtractor.sourceforge.net/"
license=('GPL')
depends=('qt' 'jack-audio-connection-kit' 'slv2'
	 'libmad' 'libsamplerate' 'rubberband' 'liblo')
makedepends=('ladspa' 'dssi')
optdepends=('dssi-vst: win32 VST support, i686-only')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
md5sums=('b0388aa56070c2662abf7daa6ba3cd81')
