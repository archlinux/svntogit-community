# Maintainer: Maxime Gauduin <alucryd@archlinux.org>

pkgname=switchboard-plug-keyboard
pkgver=2.3.6
pkgrel=1
pkgdesc='Switchboard Keyboard Plug'
arch=(x86_64)
url=https://github.com/elementary/switchboard-plug-keyboard
license=(GPL3)
groups=(pantheon)
depends=(
  glib2
  gtk3
  libgee
  libgnomekbd
  libgranite.so
  libxml2
  libswitchboard-2.0.so
)
makedepends=(
  git
  meson
  vala
)
source=(git+https://github.com/elementary/switchboard-plug-keyboard.git#tag=0e334bf0f9daba9017b9c9129b50bbb804452ab6)
sha256sums=(SKIP)

pkgver() {
  cd switchboard-plug-keyboard

  git describe --tags
}

build() {
  arch-meson switchboard-plug-keyboard build
  ninja -C build
}

package() {
  DESTDIR="${pkgdir}" ninja -C build install
}

