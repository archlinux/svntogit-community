# Maintainer: Maxime Gauduin <alucryd@archlinux.org>

pkgname=switchboard-plug-network
pkgver=2.3.1
pkgrel=1
pkgdesc='Switchboard Network Plug'
arch=(x86_64)
url=https://github.com/elementary/switchboard-plug-network
license=(GPL3)
groups=(pantheon)
depends=(
  glib2
  gtk3
  libgee
  libgranite.so
  libnm
  libnma
  libswitchboard-2.0.so
  networkmanager
  polkit
)
makedepends=(
  git
  meson
  vala
)
source=(git+https://github.com/elementary/switchboard-plug-network.git#tag=f55d744625c96ea2d265b86c5f4db88c838c25ae)
sha256sums=(SKIP)

pkgver() {
  cd switchboard-plug-network

  git describe --tags
}

build() {
  arch-meson switchboard-plug-network build
  ninja -C build
}

package() {
  DESTDIR="${pkgdir}" ninja -C build install
}

