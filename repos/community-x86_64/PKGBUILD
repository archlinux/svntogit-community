pkgname=html-xml-utils
pkgver=8.6
pkgrel=1
pkgdesc='Utilities for manipulating HTML and XML files'
arch=('x86_64')
url='https://www.w3.org/Tools/HTML-XML-utils/'
license=('W3C')
depends=('curl' 'libidn2')
source=("$url/$pkgname-$pkgver.tar.gz")
sha512sums=('0050b789a4921fa66b863255f1fd1ef9826e4b778ebc6dc67592fe854ec314b13cd8b162af67dae204018867966cfd5cb9822345917d3de3dc76c797bc0d2ec1')
b2sums=('8c13a36798c5bb2e325f0df38696a9428b6c3ca087bbb4d1e7d9f2dd372e0aff386b7747e117016ad733ac07ab56a38b5ad0bcb1a0aa6b5ffd58de0ba2d8027d')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

check() {
  cd "$pkgname-$pkgver"
  make check
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
