pkgname=terraform
pkgver=1.0.8
pkgrel=1
pkgdesc="HashiCorp tool for building and updating infrastructure as code idempotently"
url="https://www.terraform.io/"
arch=("x86_64")
license=("MPL")
makedepends=("go")
depends=('glibc')
source=("$pkgname-$pkgver.tar.gz::https://github.com/hashicorp/terraform/archive/v$pkgver.tar.gz"
        "terraform.bash"
        "terraform.fish"
        "terraform.zsh")
sha512sums=('8c3717da882c7ec9c71c4181f09f977eee8e374bb2b09b1974f82d5e0bbd74a97cacc7789c8317c01fa8b7bfca397ca2e1d7e3c14ef88aba43c5d2246dffeb6d'
