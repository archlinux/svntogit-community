pkgver=7.6.3
pkgrel=2
epoch=1
pkgdesc='SDK intended for development of applications dealing with 3D CAD data'
arch=('x86_64')
url='https://www.opencascade.org'
license=('LGPL2.1' 'custom:LGPL-exception')
depends=(
  'ffmpeg4.4'
  'freeimage'
  'gl2ps'
  'intel-tbb'
  'tk'
  'vtk'
