pkgname=ruby-pkgconfig
_pkgname=pkg-config
pkgver=1.1.3
pkgrel=1
pkgdesc='Implementation of pkg-config in ruby'
arch=(any)
url="http://github.com/rcairo/pkg-config"
license=("LGPL")
depends=('ruby')
source=("http://gems.rubyforge.org/gems/$_pkgname-$pkgver.gem")
sha256sums=('4a71fb7e9750bca9e6c2690ce785427201c9b68c5d44fd2dfb2c814caca934ec')
noextract=($_pkgname-$pkgver.gem)

package() {
  _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  cd "$srcdir"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
    $_pkgname-$pkgver.gem
}

