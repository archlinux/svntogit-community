# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>

pkgname=ruby-rack
pkgver=1.3.5
_gemver=1.9.1
pkgrel=1
pkgdesc="Rack provides minimal, modular and adaptable interface for developing web applications in Ruby"
arch=(any)
#url="http://rack.rubyforge.org/"
url="http://rubyforge.org/projects/rack/"
license=('MIT')
depends=('ruby' 'rubygems')
noextract=("rack-$pkgver.gem")
source=(http://gems.rubyforge.org/gems/rack-$pkgver.gem)
md5sums=('fb10eec9ba62cd18e346ed5bd28577b6')

build() {
  cd $srcdir
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" rack-$pkgver.gem
  mkdir -p $pkgdir/usr/share/licenses/ruby-rack
  ln -s ../../../lib/ruby/gems/${_gemver}/gems/rack-$pkgver/COPYING $pkgdir/usr/share/licenses/ruby-rack/COPYING
}
