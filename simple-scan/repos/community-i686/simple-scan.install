pkgname=simple-scan

post_install() {
  echo -n "Installing GConf schemas..."
  usr/sbin/gconfpkg --install ${pkgname}

  [ $? -eq 0 ] && echo " Done." || echo " FAILED!"
}

pre_upgrade() {
  pre_remove $1
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  echo -n "Removing GConf schemas..."
  usr/sbin/gconfpkg --uninstall ${pkgname}

  [ $? -eq 0 ] && echo " Done." || echo " FAILED!"
}

