package() {
  mkdir jisyo
  for _t in "${_skk_jisyo_gz[@]}" ; do
    cp "SKK-JISYO.$_t.$pkgver.gz" "jisyo/SKK-JISYO.$_t.$pkgver.gz"
    gunzip "jisyo/SKK-JISYO.$_t.$pkgver.gz"
    install -D -m 644 "jisyo/SKK-JISYO.$_t.$pkgver" "$pkgdir/usr/share/skk/SKK-JISYO.$_t"
  done
}
