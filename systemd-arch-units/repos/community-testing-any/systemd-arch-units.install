#!/bin/sh

reload_units() {
  # reread all known unit files if systemd is running
  if [ -e sys/fs/cgroup/systemd ]; then
    systemctl daemon-reload
  fi
}

## arg 1:  the new package version
post_install() {
  reload_units
}

post_remove() {
  reload_units
}

post_upgrade() {
  reload_units
}

