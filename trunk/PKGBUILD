pkgname=atomicparsley
pkgver=20210617.200601.1ac7c08
pkgrel=1
pkgdesc='Command line program for reading, parsing and setting metadata in MPEG-4 files'
arch=('x86_64')
url=https://github.com/wez/atomicparsley
license=('GPL')
depends=('gcc-libs' 'zlib')
makedepends=('cmake')
source=("$url/archive/$pkgver/$pkgname-$pkgver.tar.gz")
b2sums=('1f6cb5c24fc825f48dc005e50d7c5174557f643a4c65b363679e253a32365e0a785f09109b7cb32880ad2d0457e289c9c511e0c141806bff21c30b95235f7e5c')

build() {
  cd $pkgname-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=None .
  make
}

package() {
  cd $pkgname-$pkgver
  install -D AtomicParsley "$pkgdir"/usr/bin/atomicparsley
}

