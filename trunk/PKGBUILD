# Maintainer: Felix Yan <felixonmars@archlinux.org

pkgname=spirv-headers
pkgver=1.5.1.corrected
pkgrel=1
pkgdesc='SPIR-V Headers'
arch=('any')
url='https://www.khronos.org/registry/spir-v/'
license=('MIT')
makedepends=('cmake')
source=("$pkgname-$pkgver.tar.gz::https://github.com/KhronosGroup/SPIRV-Headers/archive/$pkgver.tar.gz")
sha512sums=('92447b1b1eca6f0253265f36d67b00c0c79e93f6a707e27bd8239bd2f693c468a92b7f7c3bb3fde6bb091383baaff42d3b0bbfeb9ff5f952d8a0b9626b03848e')

build() {
  cd SPIRV-Headers-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}

package() {
  cd SPIRV-Headers-$pkgver
  make DESTDIR="$pkgdir" install
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
