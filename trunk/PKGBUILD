pkgname=pantheon-mail
pkgver=7.1.0
pkgrel=1
pkgdesc='Mail app designed for elementary OS'
arch=(x86_64)
url=https://github.com/elementary/mail
license=(GPL3)
groups=(pantheon)
depends=(
  glib2
  gtk3
  libcamel-1.2.so
  libedataserver-1.2.so
  libedataserverui-1.2.so
  libfolks.so
  libgranite.so
  libhandy-1.so
  webkit2gtk
)
makedepends=(
  git
  intltool
  meson
  vala
)
_tag=f7d4e50853d8c281b21c9fa6d747c989387f92aa
source=(pantheon-mail::git+https://github.com/elementary/mail.git#tag=${_tag})
sha256sums=('SKIP')

pkgver() {
  cd pantheon-mail
  git describe --tags
}

build() {
  arch-meson pantheon-mail build
  meson compile -C build
}

package() {
  meson install -C build --destdir "$pkgdir"
}

