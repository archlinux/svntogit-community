# Contributor: Angelo Theodorou <encelo@users.sourceforge.net>

pkgname=ffmpeg2theora
pkgver=0.26
pkgrel=1
pkgdesc="A simple converter to create Ogg Theora files"
arch=('i686' 'x86_64')
url="http://www.v2v.cc/~j/ffmpeg2theora/"
license=('GPL3')
depends=('ffmpeg')
makedepends=('pkgconfig' 'scons')
source=(http://www.v2v.cc/~j/ffmpeg2theora/downloads/${pkgname}-${pkgver}.tar.bz2)
md5sums=('48cd8c0afbfb2bce99c032a3c6e1d1db')
sha1sums=('fd4b2e31941a8abb42fe610c19dc5e59af7bf186')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  scons || return 1
  scons install destdir="${pkgdir}" prefix="/usr" mandir="PREFIX/share/man" || return 1
}
