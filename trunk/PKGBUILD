pkgname=when
pkgver=1.1.45
pkgrel=1
pkgdesc="A simple commandline personal calendar program"
arch=('any')
url="http://www.lightandmatter.com/when/when.html"
license=('GPL')
depends=('perl')
makedepends=('git')
source=("git+https://bitbucket.org/ben-crowell/when.git#tag=$pkgver")
sha256sums=('SKIP')

package() {
  cd "$srcdir"/when
  make install DESTDIR="${pkgdir}"
}
