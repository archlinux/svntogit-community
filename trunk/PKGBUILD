_pkgname=aiosqlite
pkgname=python-$_pkgname
pkgver=0.18.0
pkgrel=1
pkgdesc='asyncio bridge to the standard sqlite3 module'
arch=('any')
url='https://github.com/omnilib/aiosqlite'
license=('MIT')
depends=('python-typing_extensions' 'python-pydantic')
makedepends=('python-build' 'python-installer' 'python-flit-core')
checkdepends=('python-pytest-runner')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('638b9861125eb4d543e5455c7369cb361beecc56b1ef6a6859559042f854eb637d935d711d3095a2c643ac56b39c203202c2733a581426c5a2ba2cb7ead27d2c')

# TODO: package test requirements

build() {
  cd $_pkgname-$pkgver

  python -m build --wheel --no-isolation
}

#check() {
#  cd $_pkgname-$pkgver
#
#  python setup.py pytest
#}

package() {
  cd $_pkgname-$pkgver

  python -m installer --destdir="$pkgdir" dist/*.whl

  install -Dm 644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
