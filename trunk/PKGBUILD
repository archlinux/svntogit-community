pkgbase=nix
pkgname=('nix' 'nix-docs')
pkgver=2.13.2
_commit='435a16b5556f4171b4204a3f65c9dedf215f168c'
pkgrel=1
pkgdesc='A purely functional package manager'
arch=('x86_64')
url='https://nixos.org/nix'
license=('LGPL')
makedepends=(
  'git'
  'autoconf-archive'
  'jq'
  'libcpuid'
