pkgname=nuitka
pkgver=0.5.4.3
pkgrel=1
pkgdesc='Python to native compiler'
arch=('any')
url='http://www.nuitka.net/'
license=('APACHE')
makedepends=('scons')
depends=('python')
options=('!emptydirs')
source=("http://nuitka.net/releases/Nuitka-$pkgver.tar.gz")
sha256sums=('90bd62f7ee7148548f5fdcafd535441324e35afc4954c115f311e953ed50446d')

package() {
  cd "Nuitka-$pkgver"

  python setup.py install --root="$pkgdir" --optimize=1
}

