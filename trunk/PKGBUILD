sha256sums=('d60f69d8afc9dcc53d76a2fb68d54c26d1fdc3a822b95c1801de58c3c66cda6d'
            'SKIP')

package() {
  osinfo-db-import --root "$pkgdir" --system $pkgname-$pkgver.tar.xz
}
