
pkgname=perl-module-runtime
pkgver=0.010
pkgrel=1
pkgdesc="runtime module handling"
arch=('i686' 'x86_64')
url="http://search.cpan.org/dist/Module-Runtime/"
license=('perl')
depends=('perl-exporter' 'perl-params-classify' 'perl-parent' 'perl')
makedepends=('perl-module-build' 'perl-test-simple')
options=(!emptydirs)
source=("http://search.cpan.org/CPAN/authors/id/Z/ZE/ZEFRAM/Module-Runtime-$pkgver.tar.gz")
md5sums=('069e890c996c99d283070e7aad3de10b')

build() {
  cd $srcdir/Module-Runtime-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR="${pkgdir}"
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
