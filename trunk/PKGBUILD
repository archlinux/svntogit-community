# Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>

_pkgbasename=speexdsp
pkgname=lib32-$_pkgbasename
pkgver=1.2rc3
pkgrel=2
pkgdesc="DSP library derived from Speex (32-bit)"
arch=(x86_64)
url="http://www.speex.org/"
license=(BSD)
depends=(lib32-glibc $_pkgbasename)
makedepends=(gcc-multilib)
source=(https://downloads.us.xiph.org/releases/speex/$_pkgbasename-$pkgver.tar.gz)
sha512sums=('29dfa8345df025eeb076561648a9b5c0485692be699b6da3c2a3734b4329187a1c2eb181252f4df12b21f1309ecdf59797437dfb123d160fd723491ab216e858')

build() {
  cd $_pkgbasename-$pkgver

  export CC="gcc -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static \
    --libdir=/usr/lib32
  make
}

check() {
  cd $_pkgbasename-$pkgver
  make -k check
}

package() {
  cd $_pkgbasename-$pkgver
  make DESTDIR="$pkgdir" install
  rm -rf "${pkgdir}"/usr/{include,share}
  mkdir -p "$pkgdir/usr/share/licenses"
  ln -s $_pkgbasename "$pkgdir/usr/share/licenses/$pkgname"
}
