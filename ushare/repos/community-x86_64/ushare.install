post_install() {
    if [ -z "`grep '^ushare:' /etc/group`" ]; then
        groupadd ushare
    fi
    if [ -z "`grep '^ushare:' /etc/passwd`" ]; then
        useradd -d /var/empty -g ushare -s /sbin/nologin ushare
    fi
}

post_upgrade() {
    post_install $1
}

post_remove() {
    userdel ushare
}
