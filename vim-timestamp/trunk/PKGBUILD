# $Id$
# Maintainer: Aaron Schaefer <aaron@elasticdog.com>

pkgname=vim-timestamp
pkgver=1.21
_sourceid=10283
pkgrel=3
pkgdesc='Vim plugin for automated time stamping'
arch=('any')
url='http://www.vim.org/scripts/script.php?script_id=923'
license=('GPL')
depends=('vim')
install=vimdoc.install
source=("http://www.vim.org/scripts/download_script.php?src_id=$_sourceid")
md5sums=('59822d1fa48169a2395048cb074089c1')

package() {
  cd "$srcdir/timestamp"
  local installpath="$pkgdir/usr/share/vim/vimfiles"

  install -D -m644 doc/timestamp.txt "$installpath/doc/timestamp.txt"
  install -D -m644 plugin/timestamp.vim "$installpath/plugin/timestamp.vim"
}
